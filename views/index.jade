        div(class='container')
            h2 #{header}
            -if (locals.schema)
                strong #{blurb}
                form(class="form-horizontal")
                    -if (! locals.results)
                        legend #{blurb}
                        each type, input in schema
                            -if (input != 'id')
                                div(class="control-group")
                                    label(class="control-label", id="lbl_#{input}")= input
                                    div(class="controls")
                                        input(type="text", id="#{input}", name="#{input}")
                        button(id="submit", type="submit", class="btn") Submit
                    -else
                        div(class="btn-toolbar")
                            div(class="btn-group")
                                button(id="edit", class="btn")
                                    i(class="icon-pencil")
                                button(id="approve", class="btn disabled")
                                    i(class="icon-ok")
                                button(id="cancel", class="btn disabled")
                                    i(class="icon-remove")
                                button(id="trash", class="btn")
                                    i(class="icon-trash")
                        dl(class="horiztonal")
                        each val, key in results
                            dt
                                h3= key
                                dd
                                    p(class="lead")= val
                            hr
            -else
                strong #{blurb}




