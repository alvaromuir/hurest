            Please <a href="http://browsehappy.com/">upgrade your browser</a> or
            <a href="http://www.google.com/chromeframe/?redirect=true">activate Google Chrome Frame</a>
            to improve your experience.
        
        div(class='container')
            div(class="alert", style="display:none")
                button(type="button", class="close", data-dismiss="alert") &times
                strong
                p

            span(id="header") 
                h2 #{header}

            if (locals.schema)

                form(class="form-horizontal", style="visibility:hidden")
                    if (!locals.results)
                        legend #{blurb}

                        each field, input in locals.schema
                            div(class="control-group")
                                label(class="control-label", id="lbl_#{input}") #{input}
                                div(class="controls")
                                    if (txtArea == input)
                                        textarea(rows="10", id="#{input}", class="span9", name="#{input}")
                                    else if (dateField == input)
                                        .input-append
                                            input(type="text", id="#{input}", class="span2", name="#{input}")
                                            span(class="add-on btn", id="btnNow")
                                                i(class="icon-calendar")
                                    else if (chkBox == input)
                                        input(type="checkbox", id="#{input}", name="#{input}") #{input}

                                    else
                                        input(type="text", id="#{input}", class="span8", name="#{input}")

                        button(id="submit", class="btn") Submit
                        button(id="clear", class="btn") Clear

                    else
                        div(class="btn-toolbar")
                            div(class="btn-group")
                                button(id="edit", class="btn")
                                    i(class="icon-pencil")
                                button(id="approve", class="btn disabled")
                                    i(class="icon-ok")
                                button(id="cancel", class="btn disabled")
                                    i(class="icon-remove")
                                button(id="trash", class="btn")
                                    i(class="icon-trash")
                        dl(class="horiztonal")

                        each val, key in locals.results
                            // hide 'id' fields from form
                            dt
                                h3 #{key}
                                dd
                                    p(class="lead") #{val}
                            hr

            else
                strong #{blurb}

